<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <File name="SearchFile" fileName="logs/search.log">
            <PatternLayout pattern="%msg%n"/>
            <Filters>
                <MarkerFilter marker="INPUT_ENTRY" />
            </Filters>
        </File>
        <File name="InvalidStations" fileName="logs/input_errors.log">
            <PatternLayout pattern="%msg%n"/>
            <Filters>
                <MarkerFilter marker="INVALID_STATIONS" />
            </Filters>
        </File>
        <File name="Exceptions" fileName="logs/exceptions.log">
            <PatternLayout pattern="%msg%n"/>
            <Filters>
                <MarkerFilter marker="EXCEPTIONS" />
            </Filters>
        </File>
    </appenders>
    <loggers>
        <root level="info">
            <appender-ref ref="SearchFile" />
            <appender-ref ref="InvalidStations" />
            <appender-ref ref="Exceptions" />
        </root>
    </loggers>
</configuration>